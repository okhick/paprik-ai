{
  "name": "paprik-ai",
  "version": "1.0.0",
  "description": "An AI enabled Paprika recipe client. Built for the terminal.",
  "license": "ISC",
  "author": "Oliver Hickman",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "paprik": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "oclif": {
    "bin": "paprik",
    "dirname": "paprik",
    "commands": "./dist/commands",
    "topicSeparator": " "
  },
  "dependencies": {
    "@byteland/ink-scroll-bar": "^0.1.1",
    "@oclif/core": "^4.0.0",
    "better-sqlite3": "^11.0.0",
    "ink": "^6.6.0",
    "ink-scroll-view": "^0.3.5",
    "react": "^19.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.0",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "globals": "^17.1.0",
    "prettier": "^3.3.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
